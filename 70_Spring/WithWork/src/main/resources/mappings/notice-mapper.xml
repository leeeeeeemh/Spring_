<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NoticeDAO">

	<insert id="insertNotice" parameterType="notice">
		INSERT INTO CHATMESSAGE (M_NUM, ROOM_ID, TIME, MESSAGE, ATTFILE, CONTENT, G_NAME, ROLE)
		VALUES (1, 1, sysdate, #{message}, 첨부파일, 대화명, 이충진, 인턴)
	</insert>
	
	<select id="getNotice" parameterType="notice" resultType="notice">
		SELECT * FROM CHATMESSAGE WHERE ROOM_ID = 1
	</select>
</mapper>












